{
  "mcpServers": {
    "wechat": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "/path/to/your/mcp-server-wechat",
        "python3",
        "-m",
        "mcp_server_wechat.server"
      ],
      "env": {
        "WECHAT_APP_ID": "your_wechat_app_id",
        "WECHAT_APP_SECRET": "your_wechat_app_secret",
        "WECHAT_ACCESS_TOKEN": "your_access_token",
        "CACHE_ENABLED": "true",
        "CACHE_TTL": "3600",
        "LOG_LEVEL": "INFO"
      }
    }
  }
}