# 微信公众号 MCP Server 环境变量配置

# 微信公众号基本信息
WECHAT_APP_ID=your_wechat_app_id_here
WECHAT_APP_SECRET=your_wechat_app_secret_here

# 访问令牌（可选，如果不设置会自动获取）
WECHAT_ACCESS_TOKEN=

# 缓存配置
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_DIR=.cache

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/mcp_server.log

# 搜索配置
SEARCH_ENABLED=true
SEARCH_TIMEOUT=30

# 请求配置
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# 安全配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600